        <TextBox x:Name="textBox" Height="23" Margin="124.915,59.219,0,0" TextWrapping="Wrap" Text="Enter a number" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120"/>
        <Button x:Name="button" Content="Calculate" HorizontalAlignment="Left" Margin="169.915,87.219,0,0" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="label2" Content="BIN:" HorizontalAlignment="Left" Margin="10,122.092,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2_Copy" Content="HEX:" HorizontalAlignment="Left" Margin="10,0,0,93.265" VerticalAlignment="Bottom" d:LayoutOverrides="VerticalAlignment"/>
        <Label x:Name="label2_Copy1" Content="DEC:" HorizontalAlignment="Left" Margin="10,0,0,51.435" VerticalAlignment="Bottom"/>
        <Label x:Name="label3" Content="Output" HorizontalAlignment="Left" Margin="124.915,122.39,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label3_Copy" Content="Output" HorizontalAlignment="Left" Margin="124.915,0,0,51.435" VerticalAlignment="Bottom" d:LayoutOverrides="VerticalAlignment"/>
        <Label x:Name="label3_Copy1" Content="Output" HorizontalAlignment="Left" Margin="124.915,0,0,93.265" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
